<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    tools:context=".Activity.Login">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:elevation="4dp"
        android:layout_above="@+id/appName"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="location.json"
            app:lottie_loop="true" />



    </LinearLayout>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LlBtn"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_medium"
        android:padding="5dp"
        android:text="Friends Nearby"
        android:textColor="@color/md_red_600"
        android:textSize="20sp" />




    <LinearLayout
        android:id="@+id/LlBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingTop="16dp"
        android:paddingEnd="40dp">

        <Button
            android:id="@+id/g_plus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_button_red"
            android:drawableStart="@drawable/ic_google_logo"
            android:drawablePadding="25dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Google SIGN IN"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/corner_button_green"
            android:drawableStart="@drawable/ic_smartphone"
            android:drawablePadding="25dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Phone Number"
            android:textAllCaps="false"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="By using the app, you agree to the Terms and Privacy Policies"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textColor="@color/md_grey_800"
            android:textSize="12sp" />
    </LinearLayout>




</RelativeLayout>